<%- include('partials/header') %>

<div class="container my-5">
    <h1 class="text-center mb-5">Emergency Contacts</h1>
    <p class="text-center text-muted mb-5">Important national and local contact numbers. Click to call on mobile devices.</p>

    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 text-center border-danger shadow">
                <div class="card-body">
                    <h2 class="card-title">All-in-One Emergency</h2>
                    <p class="display-4 fw-bold text-danger">112</p>
                    <a href="tel:112" class="btn btn-danger">Call Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 text-center border-primary shadow">
                <div class="card-body">
                    <h2 class="card-title">Police</h2>
                    <p class="display-4 fw-bold text-primary">100</p>
                    <a href="tel:100" class="btn btn-primary">Call Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 text-center border-warning shadow">
                <div class="card-body">
                    <h2 class="card-title">Fire & Rescue</h2>
                    <p class="display-4 fw-bold text-warning">101</p>
                    <a href="tel:101" class="btn btn-warning">Call Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 text-center border-success shadow">
                <div class="card-body">
                    <h2 class="card-title">Ambulance</h2>
                    <p class="display-4 fw-bold text-success">102 / 108</p>
                    <a href="tel:108" class="btn btn-success">Call Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 text-center border-info shadow">
                <div class="card-body">
                    <h2 class="card-title">NDRF Helpline</h2>
                    <p class="display-4 fw-bold text-info">011-26701728</p>
                    <a href="tel:01126701728" class="btn btn-info">Call Now</a>
                </div>
            </div>
        </div>
         <div class="col-md-6 col-lg-4">
            <div class="card h-100 text-center border-secondary shadow">
                <div class="card-body">
                    <h2 class="card-title">District Disaster Mgmt.</h2>
                    <p class="display-4 fw-bold text-secondary">1077</p>
                    <a href="tel:1077" class="btn btn-secondary">Call Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

