<%- include('partials/header') %>

<div class="container my-5">
    <div class="row">
        <div class="col-lg-5">
            <h2 class="mb-4">DDMA Control Panel</h2>
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5>Issue New Emergency Alert</h5>
                </div>
                <div class="card-body">
                    <form action="/alerts" method="POST">
                        <div class="mb-3">
                            <label for="title" class="form-label">Alert Title</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="e.g., Flood Warning" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="message" rows="3" placeholder="Detailed instructions for residents..." required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="region" class="form-label">Target Region</label>
                            <input type="text" class="form-control" id="region" name="region" placeholder="e.g., Pune District" required>
                        </div>
                        <div class="mb-3">
                            <label for="severity" class="form-label">Severity Level</label>
                            <select class="form-select" id="severity" name="severity">
                                <option>Low</option>
                                <option>Medium</option>
                                <option>High</option>
                                <option>Critical</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Broadcast Alert Now</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <h2 class="mb-4">Recently Issued Alerts</h2>
            <div class="list-group">
                <% if (recentAlerts.length > 0) { %>
                    <% recentAlerts.forEach(alert => { %>
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1"><%= alert.title %></h5>
                                <small><%= alert.issuedAt.toLocaleDateString() %></small>
                            </div>
                            <p class="mb-1"><%= alert.message %></p>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <small>Severity: <%= alert.severity %> | Region: <%= alert.region %></small>
                                
                                <form action="/alerts/delete/<%= alert._id %>" method="POST" class="mb-0">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                                </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No alerts have been issued recently.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>