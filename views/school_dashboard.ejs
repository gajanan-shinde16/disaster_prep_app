<%- include('partials/header') %>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>School Administration</h1>
        <a href="/admin/dashboard" class="btn btn-primary">View Preparedness Dashboard</a>
    </div>

    <div class="card border-warning mb-5 shadow">
         <div class="card-header bg-warning">
            <h4 class="mb-0">ðŸ“¢ Latest Broadcast Alert</h4>
        </div>
         <div class="card-body">
            <% if (alert) { %>
                <h5 class="card-title"><%= alert.title %> (Severity: <%= alert.severity %>)</h5>
                <p class="card-text"><%= alert.message %></p>
                <p class="card-text"><small class="text-muted">Issued for <%= alert.region %> at <%= alert.issuedAt.toLocaleString() %></small></p>
            <% } else { %>
                <p class="text-success fw-bold">All clear! No active alerts for your region.</p>
            <% } %>
        </div>
    </div>

    <div class="row g-4">
         <div class="col-md-6 col-lg-4">
            <div class="card h-100 text-center feature-card">
                <div class="card-body">
                    <h5 class="card-title">Manage Courses</h5>
                    <p class="card-text">Create and edit disaster safety courses for students.</p>
                    <a href="/admin/courses" class="btn btn-success">Go to Courses</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 text-center feature-card">
            <div class="card-body">
                <h5 class="card-title">Preparedness Score (Analytics)</h5>
                <p class="card-text">View detailed charts on student progress and course completions.</p>
                <a href="/admin/analytics" class="btn btn-info">View Analytics</a>
            </div>
        </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 text-center feature-card">
                <div class="card-body">
                    <h5 class="card-title">Schedule Mock Drills</h5>
                    <p class="card-text">Plan and notify students and staff of upcoming drills.</p>
                    <a href="/admin/drills" class="btn btn-primary">Schedule Drill</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>